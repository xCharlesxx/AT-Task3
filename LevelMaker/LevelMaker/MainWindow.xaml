<Window x:Class="LevelMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelMaker"
        mc:Ignorable="d"
        Title="Level Maker" Height="442.157" Width="1216.515"
        MouseRightButtonDown="Window_MouseRightButtonDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseRightButtonUp="Window_MouseRightButtonUp"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid Margin="0,0,2,0">
        <ComboBox x:Name="TileType" HorizontalAlignment="Left" Margin="1053,32,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="Platform"/>
            <ComboBoxItem Content="Wall"/>
            <ComboBoxItem Content="Enemy Path"/>
            <ComboBoxItem Content="Door Right"/>
            <ComboBoxItem Content="Door Left"/>
            <ComboBoxItem Content="Door Up"/>
            <ComboBoxItem Content="Door Down"/>
            <ComboBoxItem Content="Collectable"/>
            <ComboBoxItem Content="Ladder"/>
            <ComboBoxItem Content="Rope"/>
            <ComboBoxItem Content="Stairs up from Right"/>
            <ComboBoxItem Content="Stairs up from Left"/>
            <ComboBoxItem Content="Conveyor Left"/>
            <ComboBoxItem Content="Conveyor Right"/>
            <ComboBoxItem Content="Empty"/>
        </ComboBox>
        <Label x:Name="label" Content="Tile Type" HorizontalAlignment="Left" Margin="1050,7,0,0" VerticalAlignment="Top"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="471" VerticalAlignment="Top" Width="459"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="1053,78,0,0" TextWrapping="Wrap" Text="New Game" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ExportButton" Content="Export" HorizontalAlignment="Left" Margin="1071,352,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="label1" Content="Game Name" HorizontalAlignment="Left" Margin="1050,56,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="LevelNumber" HorizontalAlignment="Left" Margin="1136,110,0,0" VerticalAlignment="Top" Width="37" SelectedIndex="0">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
        </ComboBox>
        <Label x:Name="label2" Content="Level Number" HorizontalAlignment="Left" Margin="1051,108,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Load" Content="Load" HorizontalAlignment="Left" Margin="1071,377,0,0" VerticalAlignment="Top" Width="75" Click="Load_Click"/>
        <Label x:Name="label3" Content="Level Name" HorizontalAlignment="Left" Margin="1051,133,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LevelName" HorizontalAlignment="Left" Height="23" Margin="1053,159,0,0" TextWrapping="Wrap" Text="New Level" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label4" Content="Level Theme" HorizontalAlignment="Left" Margin="1051,181,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="LevelType" HorizontalAlignment="Left" Margin="1053,204,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Content="Normal"/>
            <ComboBoxItem Content="Future"/>
            <ComboBoxItem Content="Ice"/>
            <ComboBoxItem Content="Desert"/>
        </ComboBox>
        <ComboBox x:Name="comboRoomUp" HorizontalAlignment="Left" Margin="1072,245,0,0" VerticalAlignment="Top" Width="70" SelectedIndex="0">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
        </ComboBox>
        <ComboBox x:Name="comboRoomDown" HorizontalAlignment="Left" Margin="1072,289,0,0" VerticalAlignment="Top" Width="70" SelectedIndex="0">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
        </ComboBox>
        <ComboBox x:Name="comboRoomLeft" HorizontalAlignment="Left" Margin="1022,267,0,0" VerticalAlignment="Top" Width="70" SelectedIndex="0">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
        </ComboBox>
        <ComboBox x:Name="comboRoomRight" HorizontalAlignment="Left" Margin="1122,267,0,0" VerticalAlignment="Top" Width="70" SelectedIndex="0">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
        </ComboBox>
        <Label x:Name="label5" Content="Room Connections" HorizontalAlignment="Left" Margin="1051,317,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
